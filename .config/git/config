[commit]
  template = ~/.config/git/template

[core]
  compression = 9
  editor = nvim
  whitespace = error

[init]
  defaultBranch = main

[status]
  branch = true
  showStash = true
  showUntrackedFiles = all


[diff]
  interHunkContext = 10
  renames = copies

[pager]
  diff = diff-so-fancy | less --tabs=4 -RF
